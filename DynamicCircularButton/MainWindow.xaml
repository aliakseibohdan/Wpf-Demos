<Window x:Class="DynamicCircularButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dynamic Circular Button" Height="400" Width="600"
        Background="White">

    <Grid>
        <Button x:Name="CircularButton"
                Width="120" 
                Height="120"
                Content="Push"
                Foreground="White"
                FontFamily="Segoe UI"
                FontWeight="SemiBold"
                FontSize="16"
                Click="CircularButton_Click">
            
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="ScaleTransform" 
                                          ScaleX="1" 
                                          ScaleY="1"/>
                        </Grid.RenderTransform>
                        <Grid.RenderTransformOrigin>
                            <Point X="0.5" Y="0.5"/>
                        </Grid.RenderTransformOrigin>

                        <!-- Outer Ring -->
                        <Ellipse Stroke="Gray"
                               StrokeThickness="3"
                               Fill="Gray"/>

                        <!-- Inner Ring -->
                        <Ellipse Stroke="Yellow"
                               StrokeThickness="8"
                               Fill="Yellow"
                               Margin="12"/>
                        
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        TextElement.Foreground="Black"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="1.3"
                                                       Duration="0:0:0.2"
                                                       DecelerationRatio="0.6"/>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="1.3"
                                                       Duration="0:0:0.2"
                                                       DecelerationRatio="0.6"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="1"
                                                       Duration="0:0:0.3"
                                                       AccelerationRatio="0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="1"
                                                       Duration="0:0:0.3"
                                                       AccelerationRatio="0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>